import sys

import cirdan

if __name__ == '__main__':
    print("cirdan v{}\n".format(cirdan.version))

    try:
        with open('@sysconfdir@/cirdan') as f:
            config = cirdan.Config(f)
    except OSError as e:
        sys.exit("cirdan: {}: '{}'".format(e.strerror, e.filename))

    print("Cirdan user: '{}'".format(config.cirdan_user))
    print("Cirdan path: '{}'".format(config.cirdan_path))
